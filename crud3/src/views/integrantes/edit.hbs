<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto w-50">
            <div class="card text-center bg-dark text-success">
                <div class="card-header" >
                    <h3 class="text-uppercase">Editando un integrante</h3>
                </div>
                <div class="card-body">
                    <form action="/edit/{{integrante.id}}" method="post">
                        <div class="input-group mt-2">
                            <label for="name" class="input-group-text mx-3">Nombre</label>
                            <input class="form-control" type="text" name="name" id="name" value="{{integrante.name}}" placeholder="Ejemplo: Luis angel" autofocus required> 
                        </div>
                        <div class="input-group mt-2">
                            <label for="role" class="input-group-text mx-3">Rol</label>
                            <input class="form-control" type="text" name="role" id="role" value="{{integrante.role}}" placeholder="Ejemplo: Desarrollador frontend" required> 
                        </div>
                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-succes text-primary fw-bold border-primary">Actualizar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>